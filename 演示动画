            <div class="profile-image" id="profile-image"></div>
            <h2 class="qq-text" id="qq-text">祝您购物愉快</h2>
        </div>
        
        <div class="completion-message" id="completion-message">
            欢迎动画已完成
        </div>
    </div>

    <script>
        // 创建雪花效果
        function createSnow() {
            const snowContainer = document.getElementById('snow-container');
            const snowflakeCount = 100;
            
            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.classList.add('snowflake');
                
                // 随机大小
                const size = Math.random() * 5 + 2;
                snowflake.style.width = `${size}px`;
                snowflake.style.height = `${size}px`;
                
                // 随机位置
                snowflake.style.left = `${Math.random() * 100}%`;
                snowflake.style.top = `${Math.random() * 100}%`;
                
                // 随机透明度
                snowflake.style.opacity = Math.random() * 0.7 + 0.3;
                
                // 随机动画
                const duration = Math.random() * 10 + 10;
                const delay = Math.random() * 5;
                snowflake.style.animation = `fall ${duration}s linear ${delay}s infinite`;
                
                snowContainer.appendChild(snowflake);
            }
        }
        
        // 雪花下落动画
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
                0% {
                    transform: translateY(-100px) rotate(0deg);
                }
                100% {
                    transform: translateY(100vh) rotate(360deg);
                }
            }
        `;
        document.head.appendChild(style);
        
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化雪花
            createSnow();
            
            const welcomeOverlay = document.getElementById('welcome-overlay');
            const welcomeContainer = document.getElementById('welcome-container');
            const welcomePart = document.getElementById('welcome-part');
            const shopPart = document.getElementById('shop-part');
            const nextScreen = document.getElementById('next-screen');
            const qqText = document.getElementById('qq-text');
            const skipBtn = document.getElementById('skip-btn');
            const completionMessage = document.getElementById('completion-message');
            const profileImage = document.getElementById('profile-image');
            const blackTransition = document.getElementById('black-transition');
            
            let animationCompleted = false;
            let skipClicked = false;
            
            // 在动画期间禁用 body 滚动
            document.body.style.overflow = 'hidden';
            
            // 检查网络图片是否加载成功
            const testImage = new Image();
            testImage.onload = function() {
                profileImage.style.backgroundImage = "url('http://file.makima.top/1.jpg')";
            };
            testImage.onerror = function() {
                profileImage.classList.add('image-failed');
                profileImage.style.backgroundImage = "none";
                profileImage.style.backgroundColor = "rgba(30, 41, 59, 0.7)";
            };
            testImage.src = 'http://file.makima.top/1.jpg';
            
            // 动画序列 - 调整时间以配合放大动画
            setTimeout(() => {
                welcomePart.classList.add('active');
            }, 3000); // 在玫瑰放大动画完成后显示文字
            
            setTimeout(() => {
                shopPart.classList.add('active');
            }, 4500);
            
            // 第一个界面结束，显示黑色过渡
            setTimeout(() => {
                blackTransition.classList.add('active');
                
                // 黑色过渡后显示第二个界面
                setTimeout(() => {
                    // 完全隐藏第一个界面
                    welcomeContainer.classList.add('hidden');
                    blackTransition.classList.remove('active');
                    nextScreen.classList.add('active');
                    
                    // 显示QQ文字
                    setTimeout(() => {
                        qqText.classList.add('active');
                        
                        // 显示完成消息
                        setTimeout(() => {
                            completionMessage.classList.add('show');
                            animationCompleted = true;
                            
                            // 动画完成后自动关闭
                            setTimeout(() => {
                                closeWelcomePage();
                            }, 3000);
                        }, 1000);
                    }, 1000);
                }, 800); // 黑色过渡持续时间
            }, 7000); // 延长总时间以配合动画序列
            
            // 跳过按钮事件 - 直接关闭动画
            skipBtn.addEventListener('click', function() {
                if (!skipClicked) {
                    skipClicked = true;
                    closeWelcomePage();
                }
            });
            
            // 关闭欢迎页面函数
            function closeWelcomePage() {
                welcomeOverlay.style.opacity = '0';
                setTimeout(() => {
                    welcomeOverlay.style.display = 'none';
                    // 关键修复：重新启用 body 滚动
                    document.body.style.overflow = 'auto';
                    document.body.style.overflowX = 'hidden';
                }, 500);
            }
        });
    </script>
</body>
</html>
