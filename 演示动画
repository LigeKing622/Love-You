            <!-- 在线玫瑰图片 -->
            <div class="rose-image"></div>
            
            <h1 class="welcome-text welcome-part" id="welcome-part">Welcome</h1>
            <h1 class="welcome-text shop-part" id="shop-part">yznl.shop</h1>
