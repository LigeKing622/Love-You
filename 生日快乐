<body>
    <div class="container">
        <header>
            <h1>生日快乐</h1>
            <div class="subtitle">吹灭蜡烛，许下心愿</div>
            <div class="divider"></div>
        </header>
        
        <div class="cake-container">
            <div class="cake">
                <div class="cake-layer cake-bottom"></div>
                <div class="frosting frosting-bottom"></div>
                <div class="cake-layer cake-middle"></div>
                <div class="frosting frosting-middle"></div>
                <div class="cake-layer cake-top"></div>
                <div class="frosting frosting-top"></div>
                <div class="decoration decoration-1"></div>
                <div class="decoration decoration-2"></div>
                <div class="decoration decoration-3"></div>
                <div class="candles-container" id="candlesContainer">
                    <!-- 蜡烛将通过JavaScript动态生成 -->
                </div>
            </div>
        </div>
        
        <div class="gift-container">
            <div class="gift-box" id="giftBox">
                <div class="gift-lid"></div>
                <div class="gift-bow"></div>
            </div>
        </div>
        
        <div class="status-container">
            <div class="blow-indicator">
                <div class="blow-level" id="blowLevel"></div>
            </div>
            <div class="mic-status" id="micStatus">麦克风状态: 等待授权...</div>
            <div class="success-message" id="successMessage">恭喜！你成功吹灭了所有蜡烛！</div>
        </div>
        
        <div class="controls">
            <button id="resetCandles">重新点燃</button>
            <button id="toggleMusic">播放/暂停</button>
        </div>
        
        <!-- 生日祝福文字 -->
        <div class="birthday-message" id="birthdayMessage">Happy Birthday!</div>
        
        <!-- 彩带和气球容器 -->
        <div id="confettiContainer"></div>
        <div id="balloonsContainer"></div>
        
        <audio id="birthdaySong" loop>
            <source src="http://m701.music.126.net/20251109000541/f7639dd3171d2ea1e3897dadb89cec86/jdymusic/obj/wo3DlMOGwrbDjj7DisKw/36651448675/43f0/1b9a/5d36/630c53aafa0feda14e635a9b27f2c061.mp3?&cdntag=bWFyaz1vc193ZWIscXVhbGl0eV9zdGFuZGFyZA" type="audio/mpeg">
            您的浏览器不支持音频元素。
        </audio>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 获取DOM元素
            const candlesContainer = document.getElementById('candlesContainer');
            const resetCandlesBtn = document.getElementById('resetCandles');
            const toggleMusicBtn = document.getElementById('toggleMusic');
            const birthdaySong = document.getElementById('birthdaySong');
            const micStatus = document.getElementById('micStatus');
            const blowLevel = document.getElementById('blowLevel');
            const successMessage = document.getElementById('successMessage');
            const giftBox = document.getElementById('giftBox');
            const birthdayMessage = document.getElementById('birthdayMessage');
            const confettiContainer = document.getElementById('confettiContainer');
            const balloonsContainer = document.getElementById('balloonsContainer');
            
            // 获取URL参数中的蜡烛数量
            const urlParams = new URLSearchParams(window.location.search);
            let candleCount = parseInt(urlParams.get('candles')) || 8;
            candleCount = Math.min(Math.max(candleCount, 1), 20); // 限制在1-20之间
            
            // 音频上下文和麦克风相关变量
            let audioContext;
            let analyser;
            let microphone;
            let javascriptNode;
            let isBlowing = false;
            let candlesLit = candleCount;
            
            // 创建彩带
            function createConfetti() {
                confettiContainer.innerHTML = '';
                for (let i = 0; i < 80; i++) { // 增加彩带数量
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.animationDelay = Math.random() * 3 + 's';
                    confettiContainer.appendChild(confetti);
                }
            }
            
            // 显示彩带
            function showConfetti() {
                const confettiElements = document.querySelectorAll('.confetti');
                confettiElements.forEach(confetti => {
                    confetti.classList.add('show');
                });
                
                // 3秒后移除彩带元素
                setTimeout(() => {
                    confettiElements.forEach(confetti => {
                        confetti.remove();
                    });
                }, 3000);
            }
            
            // 创建气球 - 分布在上下区域
            function createBalloons() {
                balloonsContainer.innerHTML = '';
                const colors = ['#ff6b6b', '#4ecdc4', '#ffd166', '#06d6a0', '#118ab2'];
                
                // 创建上半部分气球
                for (let i = 0; i < 8; i++) {
                    const balloon = document.createElement('div');
                    balloon.className = 'balloon';
                    balloon.style.left = Math.random() * 90 + 5 + 'vw';
                    balloon.style.top = Math.random() * 30 + 'vh'; // 上半部分
                    balloon.style.animationDelay = Math.random() * 5 + 's';
                    balloon.style.background = colors[Math.floor(Math.random() * colors.length)];
                    balloonsContainer.appendChild(balloon);
                }
                
                // 创建下半部分气球
                for (let i = 0; i < 8; i++) {
                    const balloon = document.createElement('div');
                    balloon.className = 'balloon';
                    balloon.style.left = Math.random() * 90 + 5 + 'vw';
                    balloon.style.bottom = Math.random() * 30 + 'vh'; // 下半部分
                    balloon.style.animationDelay = Math.random() * 5 + 's';
                    balloon.style.background = colors[Math.floor(Math.random() * colors.length)];
                    balloonsContainer.appendChild(balloon);
                }
            }
            
            // 气球向上飘出屏幕
            function floatBalloonsUp() {
                const balloons = document.querySelectorAll('.balloon');
                balloons.forEach(balloon => {
                    balloon.classList.remove('float-up'); // 先移除类以确保动画重新开始
                    void balloon.offsetWidth; // 触发重排以重置动画
                    balloon.classList.add('float-up');
                });
            }
            
            // 创建蜡烛
            function createCandles(count) {
                candlesContainer.innerHTML = '';
                
                // 根据蜡烛数量计算每行蜡烛数
                const candlesPerRow = count <= 10 ? 5 : Math.ceil(count / 2);
                
                for (let i = 0; i < count; i++) {
                    const candle = document.createElement('div');
                    candle.className = 'candle';
                    
                    const flame = document.createElement('div');
                    flame.className = 'flame';
                    flame.dataset.lit = 'true';
                    
                    candle.appendChild(flame);
                    candlesContainer.appendChild(candle);
                }
                
                // 调整蜡烛容器宽度以适应蜡烛数量
                const containerWidth = Math.min(count * 15, 140);
                candlesContainer.style.width = containerWidth + 'px';
                
                candlesLit = count;
            }
            
            // 初始化蜡烛、彩带和气球
            createCandles(candleCount);
            createConfetti();
            createBalloons();
            
            // 重新点燃蜡烛
            resetCandlesBtn.addEventListener('click', function() {
                const flames = document.querySelectorAll('.flame');
                flames.forEach(flame => {
                    flame.classList.remove('extinguished');
                    flame.dataset.lit = 'true';
                });
                candlesLit = candleCount;
                birthdaySong.currentTime = 0;
                successMessage.style.opacity = '0';
                giftBox.classList.remove('open');
                birthdayMessage.classList.remove('show');
                
                // 重新创建气球
                createBalloons();
                
                if (!isMusicPlaying) {
                    birthdaySong.play().catch(e => console.log("自动播放被阻止:", e));
                    isMusicPlaying = true;
                }
            });
            
            // 音乐控制
            let isMusicPlaying = false;
            toggleMusicBtn.addEventListener('click', function() {
                if (isMusicPlaying) {
                    birthdaySong.pause();
                } else {
                    birthdaySong.play().catch(e => console.log("自动播放被阻止:", e));
                }
                isMusicPlaying = !isMusicPlaying;
            });
            
            // 麦克风初始化
            function initMicrophone() {
                try {
                    // 创建音频上下文
                    audioContext = new (window.AudioContext || window.webkitAudioContext)();
                    analyser = audioContext.createAnalyser();
                    analyser.fftSize = 256;
                    
                    // 获取麦克风输入
                    navigator.mediaDevices.getUserMedia({ audio: true, video: false })
                        .then(function(stream) {
                            microphone = audioContext.createMediaStreamSource(stream);
                            javascriptNode = audioContext.createScriptProcessor(2048, 1, 1);
                            
                            analyser.smoothingTimeConstant = 0.3;
                            analyser.fftSize = 1024;
                            
                            microphone.connect(analyser);
                            analyser.connect(javascriptNode);
                            javascriptNode.connect(audioContext.destination);
                            
                            javascriptNode.onaudioprocess = function() {
                                const array = new Uint8Array(analyser.frequencyBinCount);
                                analyser.getByteFrequencyData(array);
                                
                                let values = 0;
                                const length = array.length;
                                
                                for (let i = 0; i < length; i++) {
                                    values += array[i];
                                }
                                
                                const average = values / length;
                                
                                // 更新吹气指示器
                                const blowPercentage = Math.min(average / 2, 100);
                                blowLevel.style.width = blowPercentage + '%';
                                
                                // 检测吹气（降低阈值，提高灵敏度）
                                if (average > 40 && !isBlowing && candlesLit > 0) {
                                    isBlowing = true;
                                    blowOutAllCandles();
                                    
                                    // 重置吹气状态
                                    setTimeout(() => {
                                        isBlowing = false;
                                    }, 1500);
                                }
                            };
                            
                            micStatus.textContent = "麦克风状态: 已连接 - 现在可以吹气了！";
                        })
                        .catch(function(err) {
                            console.error("麦克风访问被拒绝:", err);
                            micStatus.textContent = "麦克风状态: 访问被拒绝 - 请允许麦克风访问";
                        });
                } catch (e) {
                    console.error("音频API不支持:", e);
                    micStatus.textContent = "麦克风状态: 您的浏览器不支持此功能";
                }
            }
            
            // 一次性吹灭所有蜡烛
            function blowOutAllCandles() {
                if (candlesLit <= 0) return;
                
                const flames = document.querySelectorAll('.flame[data-lit="true"]');
                
                // 添加一点随机延迟，使熄灭效果更自然
                flames.forEach((flame, index) => {
                    setTimeout(() => {
                        flame.classList.add('extinguished');
                        flame.dataset.lit = 'false';
                    }, index * 100); // 每根蜡烛间隔100毫秒熄灭
                });
                
                candlesLit = 0;
                
                // 显示满屏彩带
                createConfetti();
                showConfetti();
                
                // 气球向上飘出屏幕
                floatBalloonsUp();
                
                // 显示成功消息、礼物和生日祝福
                setTimeout(() => {
                    successMessage.style.opacity = '1';
                    giftBox.classList.add('open');
                    birthdayMessage.classList.add('show');
                }, flames.length * 100 + 500);
                
                // 如果所有蜡烛都吹灭了，暂停音乐
                setTimeout(() => {
                    birthdaySong.pause();
                    isMusicPlaying = false;
                }, flames.length * 100 + 1000);
            }
            
            // 初始化麦克风
            initMicrophone();
        });
    </script>
</body>
</html>
